rules_version = '2';

// Allows read/write access on all paths to any user
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to public reference images
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow all users to upload and manage images (both reference and generated)
    // Set custom metadata to help with CORS
    match /images/{allPaths=**} {
      allow read, write: if true;
    }
  }
}